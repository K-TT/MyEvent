<div class="container">
  <h1>
    <%= title %>
  </h1>

<link rel="stylesheet" type="text/css" href="/Content/findevents.css">


  <div class="eventWindow">
    <div class="eventHeader">
      <div class="eventCity">
        <p><%=events[0].city%></p>
      </div>
    </div>
    <div class="container">
    
      <!-- <div class="eventFilter">
        <ul>
          <li>Date</li>
