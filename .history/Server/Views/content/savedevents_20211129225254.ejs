<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">

<div class="container">
    <h1>
        <%= title %>
    </h1>

    <link rel="stylesheet" type="text/css" href="/Content/savedevents.css">

    <div class="container">

        <div class="row">
            <div class="col-lg-10 mx-auto">

                <form action="#" class="eventsForm mb-60">
                    <div class="row">
                        <div class="col-md-6 col-lg-3 my-3">
                            <div class="input-group position-relative">
                                <input type="text" class="form-control" placeholder="Enter Your Keywords" id="keywords">
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3 my-3">
                            <div class="selectContainer">
                                <select class="customSelect">
                                    <option selected>Select Location</option>
                                    <option value="Toronto">Toronto</option>
                                    <option value="Ottawa">Ottawa</option>
                                    <option value="Hamilton">Hamilton</option>
                                    <option value="Kitchener">Kitchener</option>
                                    <option value="London">London</option>
                                    <option value="Mississauga">Mississauga</option>
                                    <option value="Niagara Falls">Niagara Falls</option>
                                    <option value="Guelph">Guelph</option>
                                    <option value="Sudbury">Sudbury</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3 my-3">
                            <div class="selectContainer">
                                <select class="customSelect">
                                    <option selected>Free or Paid Event?</option>
                                    <option value="Free">Free</option>
                                    <option value="Paid">Paid</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6 col-lg-3 my-3">
                            <div class="datePicker">
                                <input class="dateInputCustom" type="date">
                            </div>
                        </div>

                        <div class="col-md-6 col-lg-3 my-3">
                            <button type="button" class="btn btn-lg btn-block btn-light btn-custom" id="searchButton">
                                Search
                            </button>
                        </div>
                    </div>
                </form>

                <div class="filteredEvents">

                    <br>

                    <div class="eventBox d-md-flex align-items-center justify-content-between mb-30">
                        <div class="eventBoxLeft my-4 d-md-flex align-items-center flex-wrap">
                            <img src="https://via.placeholder.com/80"
                                class="imageHolder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex"
                                alt="Event Photo" />
                            <div class="boxContent">
                                <h5 class="text-center text-md-left">Movie Night</h5>
                                <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                    <li class="mr-md-4">
                                        <i class="zmdi zmdi-pin mr-2"></i> Toronto
                                    </li>
                                    <li class="mr-md-4">
                                        <i class="zmdi zmdi-money mr-2"></i> 10
                                    </li>
                                    <li class="mr-md-4">
                                        <i class="zmdi zmdi-calendar"></i> 31/01/2022, 2:30 pm
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="eventBoxRight my-4 flex-shrink-0">
                            <a href="/eventdetails/" class="btn d-block w-100 d-sm-inline-block btn-dark">Detail</a>
                            <!-- 2021-11-29: Can not get event ID because we dont have saved eventList funcion yet  -- >
                            /*
                            <a href="/eventdetails/<%= eventSchema._id %>" class="btn d-block w-100 d-sm-inline-block btn-dark">Detail</a>
                            */
                         
                            <a href="#" class="btn d-block w-100 d-sm-inline-block btn-light">Cancel</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>